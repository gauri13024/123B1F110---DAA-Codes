#include <iostream>
#include <vector>
#include <algorithm>
#include <ctime>
#include <chrono>
#include <cstdlib>
#include <string>
using namespace std;
using namespace std::chrono;
struct Movie {
string title;
float rating;
int release_year;

int popularity;
void display() const {
cout << "Title: " << title
<< ", Rating: " << rating
<< ", Release Year: " << release_year
<< ", Popularity: " << popularity << '\n';
}
};
void quicksort(vector<Movie> &movies, int low, int high, bool (*compare)(const Movie &, const
Movie &)) {
if (low < high) {
int pivotIndex = low;
Movie pivot = movies[high];
for (int i = low; i < high; ++i) {
if (compare(movies[i], pivot)) {
swap(movies[i], movies[pivotIndex]);
++pivotIndex;
}
}
swap(movies[pivotIndex], movies[high]);
quicksort(movies, low, pivotIndex - 1, compare);
quicksort(movies, pivotIndex + 1, high, compare);
}
}
bool compareByRating(const Movie &a, const Movie &b) {
return a.rating < b.rating;
}
bool compareByReleaseYear(const Movie &a, const Movie &b) {
return a.release_year < b.release_year;
}
bool compareByPopularity(const Movie &a, const Movie &b) {
return a.popularity < b.popularity;
}

vector<Movie> generate(int n) {
vector<Movie> movies;
movies.reserve(n);
for (int i = 0; i < n; ++i) {
Movie m;
m.title = "Movie" + to_string(i + 1);
m.rating = static_cast<float>(rand() % 90 + 10) / 10.0f;
m.release_year = rand() % 45 + 1980;
m.popularity = rand() % 1000000 + 10000;
movies.push_back(m);
}
return movies;
}
int main() {
srand(static_cast<unsigned>(time(0)));
int num_movies = 100000;
vector<Movie> movies = generate(num_movies);
cout << "sort by (rating, release_year, popularity): ";
string sort_by;
cin >> sort_by;
bool (*compare)(const Movie &, const Movie &) = nullptr;
if (sort_by == "rating")
compare = compareByRating;
else if (sort_by == "release_year")
compare = compareByReleaseYear;
else if (sort_by == "popularity")
compare = compareByPopularity;
else {
cout << "Invalid sort criteria\n";
return 1;
}
auto start = high_resolution_clock::now();

quicksort(movies, 0, static_cast<int>(movies.size()) - 1, compare);
auto end = high_resolution_clock::now();
duration<double> diff = end - start;
cout << "top 10 movies by " << sort_by << ":\n";
int to_show = min(10, num_movies);
for (int i = num_movies - 1; i >= num_movies - to_show; --i) {
movies[i].display();
}
cout << "sorted: " << num_movies << " movies in " << diff.count() << " seconds.\n";
return 0;
}
